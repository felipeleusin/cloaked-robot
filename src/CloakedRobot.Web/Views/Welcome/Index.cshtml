@model CloakedRobot.Web.ViewModels.BlogConfigInput

@{
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

@section Styles {
    @Styles.Render("~/bundles/loginStyles")
}
<div class="container">
    <div class="form-signin">
        <h1 class="form-signin-heading">Welcome to Cloaked Robot!</h1>
        <p>Complete the form below to create your blog</p>
        @using(Html.BeginBootstrapForm("Configure"))
        {
            @Html.EditorForModel()

            <button type="submit" class="btn btn-primary">Create</button>
        }
    </div>
</div>
